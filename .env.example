# ===========================================
# Soluciona Remodelaciones - Environment Variables
# ===========================================

# Application
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# Database
DATABASE_URL=postgresql://soluciona:soluciona_pass@localhost:5432/soluciona_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Admin Default User
ADMIN_DEFAULT_EMAIL=admin@soluciona.co
ADMIN_DEFAULT_PASSWORD=Admin123!

# File Storage (S3-compatible)
STORAGE_PROVIDER=local
# For production with AWS S3:
# STORAGE_PROVIDER=s3
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=soluciona-uploads
# S3_ENDPOINT=https://s3.amazonaws.com

# Local storage path
UPLOAD_PATH=./uploads

# KYC/KYB Provider
KYC_PROVIDER=stub
# For production:
# KYC_PROVIDER=truora
# TRUORA_API_KEY=your-truora-api-key
# TRUORA_WEBHOOK_SECRET=your-webhook-secret
# OR
# KYC_PROVIDER=metamap
# METAMAP_CLIENT_ID=your-metamap-client-id
# METAMAP_CLIENT_SECRET=your-metamap-secret

# Payment Provider
PAYMENTS_PROVIDER=stub
PLATFORM_FEE_PERCENTAGE=10
# For production with Wompi:
# PAYMENTS_PROVIDER=wompi
# WOMPI_PUBLIC_KEY=pub_test_xxxxx
# WOMPI_PRIVATE_KEY=prv_test_xxxxx
# WOMPI_EVENTS_SECRET=your-events-secret
# OR PayU:
# PAYMENTS_PROVIDER=payu
# PAYU_API_KEY=your-api-key
# PAYU_MERCHANT_ID=your-merchant-id
# PAYU_ACCOUNT_ID=your-account-id

# Email Provider
EMAIL_PROVIDER=stub
# For production with SendGrid:
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=SG.xxxxx
# EMAIL_FROM=noreply@soluciona.co
# OR AWS SES:
# EMAIL_PROVIDER=ses
# (uses AWS credentials above)

# SMS/WhatsApp Provider
SMS_PROVIDER=stub
# For production with Twilio:
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=ACxxxxx
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+573xxxxxxxxx
# TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
# OR Sinch:
# SMS_PROVIDER=sinch
# SINCH_SERVICE_PLAN_ID=your-service-plan-id
# SINCH_API_TOKEN=your-api-token

# Push Notifications
PUSH_PROVIDER=stub
# For production with FCM:
# PUSH_PROVIDER=fcm
# FCM_PROJECT_ID=your-project-id
# FCM_PRIVATE_KEY=your-private-key
# FCM_CLIENT_EMAIL=firebase-adminsdk@xxxxx.iam.gserviceaccount.com

# Maps
MAPS_PROVIDER=leaflet
# For production with Mapbox:
# MAPS_PROVIDER=mapbox
# MAPBOX_TOKEN=pk.xxxxx
# OR Google Maps:
# MAPS_PROVIDER=google
# GOOGLE_MAPS_API_KEY=AIzaSyxxxxx

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=debug
# Production: info, warn, error

# WebSocket
WS_PORT=4001

# Background Jobs
QUEUE_REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_2FA=false
ENABLE_BACKGROUND_CHECKS=true
ENABLE_INSURANCE_VALIDATION=false

# Business Rules
MIN_MILESTONE_AMOUNT=50000
MAX_SERVICE_RADIUS_KM=50
DEFAULT_PROPOSAL_EXPIRY_DAYS=7
REVIEW_DECAY_MONTHS=12

# Search Configuration
SEARCH_RESULTS_PER_PAGE=20
SEARCH_MAX_RESULTS=100

# Cache TTL (seconds)
CACHE_TTL_SEARCH=300
CACHE_TTL_PROFILE=600
CACHE_TTL_CATEGORIES=3600
