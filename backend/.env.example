# Base de datos (Railway lo provee automáticamente)
DATABASE_URL=postgresql://user:password@host:5432/database

# Seguridad - CAMBIAR en producción
JWT_SECRET=tu-secreto-jwt-muy-seguro-cambiar-en-produccion
JWT_REFRESH_SECRET=tu-refresh-token-secreto-cambiar-en-produccion

# URLs de la aplicación
APP_URL=https://tu-dominio-frontend.up.railway.app
FRONTEND_URL=https://tu-dominio-frontend.up.railway.app

# Configuración general
NODE_ENV=production
PORT=4000

# Configuración de CORS
CORS_ORIGINS=https://tu-dominio-frontend.up.railway.app

# Configuración de administrador por defecto
ADMIN_DEFAULT_EMAIL=admin@soluciona.co
ADMIN_DEFAULT_PASSWORD=Admin123!ChangeInProduction

# Proveedores de servicios (usar "stub" para testing)
STORAGE_PROVIDER=local
KYC_PROVIDER=stub
PAYMENTS_PROVIDER=stub
EMAIL_PROVIDER=stub
SMS_PROVIDER=stub
PUSH_PROVIDER=stub
MAPS_PROVIDER=leaflet

# Configuración de la plataforma
PLATFORM_FEE_PERCENTAGE=10
LOG_LEVEL=info

# Redis (opcional, Railway puede proveerlo)
# REDIS_URL=redis://default:password@host:6379
