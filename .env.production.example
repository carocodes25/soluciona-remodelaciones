# =================================
# PRODUCTION ENVIRONMENT VARIABLES
# =================================
# Copy this file to .env.production and fill in the values

# =================================
# DATABASE
# =================================
POSTGRES_DB=soluciona_db
POSTGRES_USER=soluciona
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# =================================
# REDIS
# =================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# =================================
# JWT & SECURITY
# =================================
JWT_SECRET=CHANGE_ME_JWT_SECRET_MINIMUM_32_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_REFRESH_SECRET_MINIMUM_32_CHARS

# =================================
# APPLICATION URLs
# =================================
APP_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =================================
# ADMIN USER
# =================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# =================================
# EMAIL (SMTP)
# =================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# =================================
# SMS (Twilio)
# =================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =================================
# PAYMENTS (Stripe)
# =================================
PAYMENTS_PROVIDER=stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =================================
# STORAGE
# =================================
STORAGE_PROVIDER=local
# Or use S3:
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=soluciona-uploads

# =================================
# PLATFORM CONFIGURATION
# =================================
PLATFORM_FEE_PERCENTAGE=10
LOG_LEVEL=info

# =================================
# PORTS (Optional - defaults shown)
# =================================
FRONTEND_PORT=3000
BACKEND_PORT=4000
WS_PORT=4001
